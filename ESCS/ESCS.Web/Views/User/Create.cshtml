@using (Html.BeginForm())
{

    <div class="form-horizontal" style="position: relative;">
        <form class="layui-form" action="">
            <div style="position: absolute; left: 45%; top: 350px; transform: translate(-50%,-50%); width: 25%; height: auto;  padding: 20px 70px 30px 0; position: relative;">
                <div style="width: 100px; height: 90px; position: absolute; left: 50%; top: -80px; transform: translate(-50%,-50%);  ">
                    <div style="border: 1px solid #ffffff; padding: 5px 5px 5px 5px; width: 89px; height: 80px; background-image: url(../Models/Addpicture.png); background-size: 100% 100%;">
                        <img class="layui-upload-img" id="demo1" style="width: 100%; height: 100%;">
                    </div>
                    <div class="layui-upload" style="margin-top:5px;">
                        <button type="button" class="layui-btn" id="test1">上传图片</button>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">用户名</label>
                    <div class="layui-input-block">
                        <input type="text" id="UserName" name="UserName" data-val="true" data-val-length="不能超过5个字符" data-val-length-max="5" data-val-required="不能为空" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.UserName>
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">账号</label>
                    <div class="layui-input-block">
                        <input type="text" name="Account" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.Account>@Html.ValidationMessageFor(model => model.Account)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">电话</label>
                    <div class="layui-input-block">
                        <input type="tel" name="Number" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.Number>@Html.ValidationMessageFor(model => model.Number)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        <input type="email" name="Email" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.Email>@Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">年龄</label>
                    <div class="layui-input-block">
                        <input type="number" name="Age" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.Age>@Html.ValidationMessageFor(model => model.Age)
                    </div>

                </div>
                @*<div class="layui-form-item">
                    <label class="layui-form-label">性别</label>
                    <div class="layui-input-block">
                        <input type="text" name="Sex" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.Sex>@Html.ValidationMessageFor(model => model.Sex)
                    </div>
                </div>*@
                <div class="layui-form" lay-filter="test1">
                    <label class="layui-form-label">性别</label>
                    <div class="layui-input-block">
                        <input type="radio" name="Sex" value="男" title="男" checked>
                        <input type="radio" name="Sex" value="女" title="女">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">工资</label>
                    <div class="layui-input-block">
                        <input type="text" name="Salary" placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.Salary>@Html.ValidationMessageFor(model => model.Salary)
                    </div>
                </div>

                <div style="padding-left:50%;margin-top:20px;">
                    <input id="Roleid" value="" name="Roleid" type="hidden" />
                    <input id="Roleids" class="layui-btn layui-btn-radius" value="保  存" name="Roleids" type="submit" />
                </div>
            </div>
        </form>

    </div>
}
