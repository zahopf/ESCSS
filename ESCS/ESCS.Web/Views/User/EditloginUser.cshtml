@model ESCS.Domain.User

@{
    ViewBag.Title = "EditloginUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/layui-v2.5.7/layui/css/layui.css" rel="stylesheet" />
<script src="~/layui-v2.5.7/layui/layui.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="position: relative;">
        <h4>个人信息修改</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.RoleList)
        @Html.HiddenFor(model => model.Salary)
        @Html.HiddenFor(model => model.Picture)
        @Html.HiddenFor(model => model.Password)
        <form class="layui-form" action="">
            <div style="position: absolute; left: 45%; top: 350px; transform: translate(-50%,-50%); width: 25%; height: auto;  padding: 20px 70px 30px 0; position: relative;">
                <div style="width: 100px; height: 100px; position: absolute; left: 50%; top: -50px; transform: translate(-50%,-50%); border: 1px solid #808080; padding: 5px 5px 5px 5px; ">
                    <img style="width: 100%; height: 100%; " src="@Url.Content(Model.Picture)" />
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">用户名</label>
                    <div class="layui-input-block">
                        <input type="text" id="UserName" name="UserName" pattern="([^\x00-\xff]|[A-Za-z0-9_])+"  placeholder="请输入" autocomplete="off" class="layui-input" value=@Model.UserName>
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">账号</label>
                    <div class="layui-input-block">
                        <input type="text" name="Account" placeholder="请输入"  title="请输入正确账号（4到15位（字母，数字，下划线，减号））." autocomplete="off" class="layui-input" value=@Model.Account>
                        @Html.ValidationMessageFor(model => model.Account)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">电话号码</label>
                    <div class="layui-input-block">
                        <input type="tel" name="Number" placeholder="请输入电话号码" title="请输入真实电话号码." autocomplete="off" class="layui-input" value=@Model.Number>
                        @Html.ValidationMessageFor(model => model.Number)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        <input type="email" name="Email" placeholder="请输入邮箱"  title="请输入真实邮箱." autocomplete="off" class="layui-input" value=@Model.Email>
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">年龄</label>
                    <div class="layui-input-block">
                        <input type="number" name="Age" placeholder="请输入" pattern="^[0-9]*$" title="请输入真实年龄." autocomplete="off" class="layui-input" value=@Model.Age>
                        @Html.ValidationMessageFor(model => model.Age)
                    </div>

                </div>
                @*<div class="layui-form-item">
                    <label class="layui-form-label">性别</label>
                    <div class="layui-input-block">
                        <input type="text" name="Sex" placeholder="请输入真实性别 "  title="请输入真实性别." autocomplete="off" class="layui-input" value=@Model.Sex>
                        @Html.ValidationMessageFor(model => model.Sex)
                    </div> 
                </div>*@
                <div class="layui-form" lay-filter="test1">
                    <label class="layui-form-label">性别</label>
                    <div class="layui-input-block">
                        <input type="radio" name="Sex" value="男" id="nan" title="男">
                        <input type="radio" name="Sex" value="女" id="nv" title="女">
                    </div>
                </div>
                <div style="padding-left:50%;margin-top:50px;">
                    <button type="submit" class="layui-btn layui-btn-radius" style="word-spacing: 15px;">保 存</button>
                </div>
            </div>
</form>

</div>
}
<input value="@Model.Sex" id="Sexs" type="hidden" />
<script src="~/Scripts/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var Sexs = $("#Sexs").val();
        //alert(Sexs);
        if (Sexs == "女")
        { $("#nv").attr("checked", "checked"); }
        else { $("#nan").attr("checked", "checked"); }


    })

</script>