@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/layui-v2.5.7/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Contents/Login/Login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/Modal/jquery.simplemodal.js"></script>
    <script src="~/Scripts/Modal/basic.js"></script>
    <script type="text/javascript">
        function OnJAXBegin() {
            var account = $("#Account").val();
            var pwd = $("#Password").val();
            $.ajax({
                type: "post",
                url: "Login",
                data: { account: account, pwd: pwd },
                success: function (data) {
                    if (data == "1") {window.location = "@Url.Content("~/User/EditloginUser")" }
                    else { alert(data) }
                }

            })

        }
    </script>

</head>
<body style="background-color:#393d49;">
    <div style="font-size: 50px;  color: #ffffff;  margin: auto; width: 70%;  border-radius: 10px; overflow: hidden;  text-align: center;margin-top:150px;">
        欢迎登录易购商城后台管理系统
    </div>
    <div style="position: absolute; left: 50%; top: 260px; transform: translate(-50%,-50%); width: 500px; height: auto;  padding: 20px 70px 30px 0; position: relative;">
       
        <div style="margin-top: 100px; font-size: 25px;font-weight:900;">
                <div style="margin:10px 50px 60px 50px">
                    用户名：<input id="Account" style="height: 30px; width: 250px; " />
                </div>

            <div style="margin:30px 50px 50px 50px">
                密&nbsp;码&nbsp;：<input id="Password" type="password" style="height:30px;width:250px;" />
            </div>

            <div style="margin: 100px 50px 10px 50px;text-align: center;">
                <button class="layui-btn layui-btn-radius" onclick="OnJAXBegin()" style="width: 100px; height: 50px; font-size: 20px; font-weight: 300;">登录</button>
            </div>

            @*<div style="margin:30px 50px 10px 50px">
                <a href="/User/BackPassword"><button style="">忘记密码</button></a>
            </div>*@
        </div>
    </div>
   
</body>
</html>
