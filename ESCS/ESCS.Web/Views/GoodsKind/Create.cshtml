@model ESCS.Domain.GoodsKind

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="position: relative;">
        @Html.ValidationSummary(true)

        <div class="form-group" style="position: absolute; left: 15%; top: 80px;  ">
            
            <div class="col-md-10">
                <span>名称：</span>@Html.EditorFor(model => model.KindName)
                @Html.ValidationMessageFor(model => model.KindName)
            </div>
        </div>

        <div class="form-group">
            <div style="position: absolute; left: 50%; top: 150px; transform: translate(-50%,-50%); " class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
   
}
