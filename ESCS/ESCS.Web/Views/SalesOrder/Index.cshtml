@model IList<ESCS.Domain.SalesOrder>

@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/layui-v2.5.7/layui/css/layui.css" rel="stylesheet" />
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/layui-v2.5.7/layui/layui.js"></script>


<div class="demoTable">
    @using (Html.BeginForm())
    {
        <div class="layui-inline">
            <label class="layui-form-label">搜索选择框</label>
            <div class="layui-input-inline">
                <select style="height:35px;" name="modules" lay-verify="required" lay-search="">
                    <option value="">全部</option>
                    <option value="1">已付款</option>
                    <option value="2">配送中</option>
                    <option value="3">货已送到</option>
                    <option value="3">完成</option>
                    <option value="3">寄回中</option>
                </select>
            </div>
        </div>
        <button class="layui-btn" data-type="reload" type="submit">搜索</button>
    }
</div>
<div>
    <table lay-filter="demo" id="demo1" lay-data="{initSort:{field:'id', type:'null'}}">
        <thead>
            <tr>
                <th lay-data="{field:'Id', width:100,align:'center'}">
                    序号
                </th>
                <th lay-data="{field:'q', width:100,align:'center'}">
                    客户
                </th>
                <th lay-data="{field:'m', width:100,align:'center'}">
                    送货员
                </th>
                <th lay-data="{field:'a', width:300,align:'center'}">
                    下单时间
                </th>
                <th lay-data="{field:'s', width:100,align:'center'}">
                    数量
                </th>
                <th lay-data="{field:'d', width:200,align:'center'}">
                    金额
                </th>
                <th lay-data="{field:'dd', width:200,align:'center'}">
                    利润
                </th>
                <th lay-data="{field:'f', width:100,align:'center'}">
                    状态
                </th>
                
                <th lay-data="{field:'h', width:100,align:'center'}">
                    备注
                </th>
                <th lay-data="{field:'l',align:'center'}">
                    操作
                </th>

            </tr>
        </thead>
        <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerId.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Money)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Profits)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>

                        <td>
                            <div class="layui-btn-group">
                                @*@Html.ActionLink("修改", "Edit", new { id = item.ID }, new { @class = "layui-btn" })*@

                                @if (item.Status == "完成")
                                { @Html.ActionLink("删除", "Delete", new { id = item.ID, oneKind = ViewBag.OneKind }, new { onclick = "return confirm('真的打算删除吗?')", @class = "layui-btn" })}
                                else
                                { <button type="button" class="layui-btn layui-btn-xs layui-btn-disabled">删除</button>}
                                
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
    </table>

</div>


